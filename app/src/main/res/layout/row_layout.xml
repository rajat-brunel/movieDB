<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linear_v2"
    xmlns:cv="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        cv:cardElevation="8dp"
        cv:cardUseCompatPadding="true"
        cv:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poster"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="Logan"
                android:layout_toRightOf="@+id/poster"
                android:layout_alignParentTop="true"
                android:textSize="22sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_date"
                android:text="Release Date: "
                android:layout_toRightOf="@+id/poster"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release"
                android:text="2017-02-28"
                android:layout_toRightOf="@+id/release_date"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_text"
                android:text="Rating: "
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/release"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rating"
                android:text="7.7"
                android:layout_toRightOf="@+id/rating_text"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>